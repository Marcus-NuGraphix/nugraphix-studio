# Copy this file to `.env.local` for local development.
# Do not commit real credentials.

# Runtime
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/mydb

# Better Auth
BETTER_AUTH_SECRET=replace-with-a-long-random-secret
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_BASE_URL=http://localhost:3000
# Optional comma-separated allowlist for auth origin checks.
# Example: https://nu.example.com,https://admin.example.com
BETTER_AUTH_TRUSTED_ORIGINS=

# Public URL used for links in outbound emails
PUBLIC_APP_URL=http://localhost:3000

# Open-source Object Storage (MinIO via docker-compose)
S3_REGION=us-east-1
S3_BUCKET=cms-web-assets
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_PUBLIC_BASE_URL=http://localhost:9000/cms-web-assets
S3_FORCE_PATH_STYLE=true

# MinIO root credentials used by docker-compose
# Change these for non-local usage.
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Local email testing (Mailpit)
MAILPIT_SMTP_HOST=localhost
MAILPIT_SMTP_PORT=1025
MAILPIT_WEB_URL=http://localhost:8025

# Email (set EMAIL_PROVIDER to "resend", "sendgrid", or "noop")
EMAIL_PROVIDER=noop
EMAIL_FROM_ADDRESS="Nu Graphix Studio <noreply@nugraphix.co.za>"
EMAIL_REPLY_TO=info@cmssa.co.za
CONTACT_NOTIFICATION_EMAIL=info@nugraphix.co.za

# reCAPTCHA
VITE_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
# Optional risk threshold for reCAPTCHA v3 verification (0.0 - 1.0)
RECAPTCHA_MIN_SCORE=0.5

# Email provider keys (Resend)
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=

# Email provider keys (SendGrid)
SENDGRID_API_KEY=

# Queue infrastructure
REDIS_URL=redis://localhost:6379
BACKGROUND_TASKS_DRAIN_SECRET=replace-with-a-long-random-secret
# Vercel Cron automatically sets CRON_SECRET when crons are configured in
# vercel.json. The drain endpoint accepts either CRON_SECRET or
# BACKGROUND_TASKS_DRAIN_SECRET for authorization.
# CRON_SECRET=

# Editorial seed admin account (required for `pnpm seed:editorial`)
SEED_ADMIN_EMAIL=admin@nugraphix.co.za
SEED_ADMIN_NAME=NuAdmin
SEED_ADMIN_PASSWORD=DevLord!420

# Turnstile
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Sentry
SENTRY_DSN=

# MCP Servers
CONTEXT7_API_KEY=
